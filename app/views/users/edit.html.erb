<h1>Edit <% @user.name %></h1>
<div class="form-group">
  <%= form_for @user do |f| %>
    <%= f.label :admin %>
    <%= f.check_box :admin %><br>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"  %><br>

    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control"  %><br>

    <%= f.submit %>
  <% end %>
</div>
